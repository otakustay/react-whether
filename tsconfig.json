{ 
    "compilerOptions": {
      "esModuleInterop": true,
      "sourceMap": false,
      "target": "es5",
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": true,
      // trigger emitDeclarationOnly cause transpile error
      // "emitDeclarationOnly": true,
      "declarationDir": "typings",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "strict": true,
      "outDir": "dist",
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "ts",
    },
    "include": [
      "./src/**/*/",
    ],
    "exclude": ["dist", "build", "test", "node_modules", "./*.ts"]
  }
  